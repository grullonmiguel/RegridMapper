        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Settings -->
        <!--<Border Padding="0 16 16 0" Width="0" >
